<h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900 mb-8">Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8', multipart: true }) do |f| %>
<%# <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8' }) do |f| %> 
  <div class="max-w-md w-full space-y-8">
    <%= devise_error_messages! %>

    <% if resource.profile_image? %>
      <div class="text-center mb-4">
        <%= image_tag(resource.profile_image.url, alt: "Profile Image", class: "rounded-full w-24 h-24 mx-auto") %>
      </div>
    <% end %>

    <!-- Name input -->
    <div class="rounded-md shadow-sm -space-y-px">
      <%= f.label :name, class: "sr-only" %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Full Name", class: "appearance-none rounded-t-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" %>
    </div>

    <!-- Email input -->
    <div class="rounded-md shadow-sm -space-y-px">
      <%= f.label :email, class: "sr-only" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email Address", class: "appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" %>
    </div>

    <!-- Profile input -->
    <div class="rounded-md shadow-sm -space-y-px">
      <%= f.label :profile, class: "sr-only" %>
      <%= f.text_area :profile, autofocus: true, placeholder: "Profile", class: "appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" %>
    </div>

    <!-- Profile Image input -->
    <div class="rounded-md shadow-sm -space-y-px mt-4">
      <%= f.label :profile_image, class: "sr-only" %>
      <%= f.file_field :profile_image, class: "appearance-none relative block w-full px-3 py-2 border border-gray-300 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" %>
    </div>

    <!-- SNS Selection and Link Input -->
    <div class="rounded-md shadow-sm -space-y-px mt-4">
      <%= f.label :sns_type, "Select SNS", class: "sr-only" %>
      <%= f.select :sns_type, options_for_select(['Select an SNS', 'Facebook', 'Twitter', 'Instagram', 'LinkedIn']), {}, class: "appearance-none relative block w-full px-3 py-2 border border-gray-300 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm mb-2" %>

      <%= f.label :sns_username, "SNS Username or Page ID", class: "sr-only" %>
      <%= f.text_field :sns_username, placeholder: "Username or Page ID", class: "appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" %>
    </div>


    <!-- Password input -->
    <div class="rounded-md shadow-sm -space-y-px">
      <%= f.label :password, class: "sr-only" %>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password (leave blank if you don't want to change)", class: "appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" %>
    </div>

    <!-- Password confirmation input -->
    <div class="rounded-md shadow-sm -space-y-px">
      <%= f.label :password_confirmation, class: "sr-only" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password", class: "appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" %>
    </div>

    <!-- Current password input -->
    <div class="rounded-md shadow-sm -space-y-px">
      <%= f.label :current_password, class: "sr-only" %>
      <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "Current Password (needed to confirm changes)", class: "appearance-none rounded-b-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" %>
    </div>

    <div>
      <%= f.submit "Update", class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  </div>
<% end %>

<div class="mt-8 text-center">
  <h3 class="text-xl font-bold mb-4">Cancel my account</h3>
  <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "bg-red-600 text-white py-2 px-4 rounded hover:bg-red-700 focus:ring focus:ring-red-200 focus:ring-opacity-50" %>
  <%= link_to "Back", :back, class: "mt-4 block text-blue-600 hover:underline" %>
</div>
